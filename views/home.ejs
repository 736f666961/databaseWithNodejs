<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="../css/stye.css">
        <title>Home</title>
    </head>
    <body>
        <div class="container mt-4">
            <div class="row d-lg-flex justify-content-center">
                <!-- Card 1 -->
                <div class="col-md-4 col-lg-3 mr-4 mt-2 border">
                    <img class="w-100 h-75" src="../img/2.png" alt="">
                    <h1 class="text-center text-muted text-uppercase">Sarah</h1>
                    <h5 class="card-title text-muted text-center">Farm Womam</h5>
                </div>

                <!-- Card 2 -->
                <div class="col-md-4 col-lg-3 mr-4 mt-2 border">
                    <img class="w-100 h-75" src="../img/3.png" alt="">
                    <h1 class="text-center text-muted text-uppercase">Jason</h1>
                    <h5 class="card-title text-muted text-center">Man Standing</h5>
                </div>

                <!-- Card 3 -->
                <div class="col-md-4 col-lg-3 mr-4 mt-2 border">
                    <img class="w-100 h-75" src="../img/1.png" alt="">
                    <h1 class="text-center text-muted text-uppercase">John</h1>
                    <h5 class="card-title text-muted text-center">Flying Phone Man</h5>
                </div>
                <!-- Reading More Cards From Dtabase -->
                <% for (const card of cards){%>
                  <div class="col-md-4 h-auto col-lg-3 mr-4 mt-2 border">
                    <img class="w-100 h-50" src="<%= card.pictureUrl%>" alt="">
                    <h1 class="text-center text-muted text-uppercase"><%= card.name%></h1>
                    <h5 class="card-title text-muted text-center"><%= card.description%></h5>
                    <div class="row d-flex justify-content-center mt-4">
                      <a href="edit/<%= card.ID %>"><button class="col btn btn-outline-primary p-3 border">Edit</button></a>
                      <a href="delete/<%= card.ID %>"><button class="col btn btn-outline-danger p-3 border">Delete</button></a>
                    </div>
                </div>
                <%}%>
                
            </div>
            <!-- Adding New Quote -->
            <div class="container">
                <h2 class="text-center text-muted mt-4">Add New Quote</h2>
                <form action="/newCard" method="POST">
                  <div class="form-group">
                    <label for="pictureUrl">Picture Url:</label>
                    <input type="file" id="pictureUrl" class="form-control" placeholder="Enter Picture Url" name="pictureUrl">
                  </div>

                  <div class="form-group">
                    <label for="name">Name:</label>
                    <input type="text" id="name" class="form-control" placeholder="Enter name" name="name">
                  </div>

                  <div class="form-group">
                    <label for="description">Description:</label>
                    <input type="text" id="description" class="form-control" placeholder="Enter description" name="description">
                  </div>
                  <button type="submit" class="btn btn-default border">Submit</button>
                </form>
              </div>
        </div>
    </body>
</html>